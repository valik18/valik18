#include <stdio.h>

int main() {
    int n, count = 0;

    // Зчитуємо вхідне число n
    printf("Введіть натуральне число n: ");
    scanf("%d", &n);

    // Перебираємо можливі дільники m від 1 до n-1
    for (int m = 1; m < n; m++) {
        // Обчислюємо частку і залишок від ділення n на m
        int quotient = n / m;
        int remainder = n % m;

        // Перевіряємо, чи частка і залишок рівні одне одному
        if (quotient == remainder) {
            // Якщо рівні, збільшуємо лічильник рівних дільників
            count++;
        }
    }

    // Виводимо кількість рівних дільників
    printf("Кількість рівних дільників числа %d: %d\n", n, count);

    return 0;
}
